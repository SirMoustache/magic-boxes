{
  "name": "magic-boxes",
  "version": "0.0.2",
  "main": "build/magic-boxes.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/SirMoustache/magic-boxes.git"
  },
  "description": "Monad Magic Boxes",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "clean": "rimraf ./build",
    "prebuild": "npm run clean",
    "build": "npm run build:umd && npm run build:es",
    "build:umd": "webpack --config webpack.config.js",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --ignore **/__tests__/**",
    "lint": "eslint ./src/** --ignore-path .gitignore",
    "lint:fix": "eslint ./src/** --ignore-path .gitignore --fix",
    "prettify": "prettier --write ./src/**",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run prettify && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "SirMoustache",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.3.3",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "babel-minify-webpack-plugin": "^0.3.1",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.7"
  },
  "dependencies": {
    "cross-env": "^5.2.0"
  }
}
